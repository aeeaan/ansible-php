# {{ ansible_managed }}

AddType text/html .php
DirectoryIndex index.php

<IfModule  mod_php5.c>

    <FilesMatch \.php$>
        SetHandler application/x-httpd-php
    </FilesMatch>

    php_value session.save_handler "files"
    php_value session.save_path    "/var/lib/php/session"

</IfModule>

<IfModule !mod_php5.c>

    RewriteEngine On
    RewriteRule ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000%{DOCUMENT_ROOT}/$1 [P,L]

</IfModule>
